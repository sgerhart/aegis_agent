{
  "id": "arm64-optimized-policy",
  "name": "ARM64 Optimized Network Policy",
  "description": "Network segmentation policy optimized for ARM64 architecture with power efficiency considerations",
  "type": "network",
  "priority": 100,
  "enabled": true,
  "rules": [
    {
      "id": "efficient-dns-blocking",
      "action": "deny",
      "priority": 10,
      "conditions": [
        {"field": "dest_ip", "operator": "eq", "value": "8.8.8.8"},
        {"field": "protocol", "operator": "eq", "value": "tcp"}
      ],
      "metadata": {
        "description": "Efficient DNS blocking for ARM64 power conservation",
        "category": "dns_security",
        "power_impact": "low",
        "arm64_optimized": true
      }
    },
    {
      "id": "arm64-internal-allow",
      "action": "allow",
      "priority": 1,
      "conditions": [
        {"field": "dest_ip", "operator": "contains", "value": "192.168."},
        {"field": "protocol", "operator": "eq", "value": "tcp"}
      ],
      "metadata": {
        "description": "Allow internal network with ARM64 optimization",
        "category": "internal_access",
        "processing_cost": "minimal",
        "arm64_optimized": true
      }
    },
    {
      "id": "low-power-https",
      "action": "allow",
      "priority": 5,
      "conditions": [
        {"field": "dest_port", "operator": "eq", "value": 443},
        {"field": "protocol", "operator": "eq", "value": "tcp"}
      ],
      "metadata": {
        "description": "HTTPS with low-power ARM64 processing",
        "category": "web_access",
        "power_profile": "efficient",
        "arm64_optimized": true
      }
    },
    {
      "id": "arm64-ssh-restrict",
      "action": "deny",
      "priority": 15,
      "conditions": [
        {"field": "dest_port", "operator": "eq", "value": 22},
        {"field": "protocol", "operator": "eq", "value": "tcp"},
        {"field": "dest_ip", "operator": "not_in", "value": "192.168.0.0/16"}
      ],
      "metadata": {
        "description": "Restrict external SSH for ARM64 security",
        "category": "ssh_security",
        "arm64_optimized": true,
        "security_level": "high"
      }
    }
  ],
  "metadata": {
    "environment": "arm64_production",
    "created_by": "aegis_arm64_admin", 
    "policy_version": "1.0",
    "applies_to": ["arm64_servers", "edge_devices", "iot_gateways"],
    "architecture": "arm64",
    "optimizations": {
      "power_efficient": true,
      "low_latency": true,
      "minimal_cpu_impact": true,
      "memory_optimized": true
    },
    "performance_profile": {
      "target_cpu_usage": "< 2%",
      "memory_footprint": "< 50MB",
      "rule_evaluation_time": "< 1ms"
    },
    "arm64_features": {
      "neon_simd": false,
      "crypto_extensions": false,
      "low_power_mode": true
    }
  }
}
